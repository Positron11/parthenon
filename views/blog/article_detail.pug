extends ../base

append stylesheets 
	link(rel="stylesheet", href="/stylesheets/blog/article_detail.css")

prepend header
	- var heading = article.title
	- var subheading = article.subtitle
	- var content = article.renderDescription()

block content	
	.separator 

	#article_content!= article.renderContent()

block toolbar 
	a.unstyled(href=`${article.url}/edit`).toolbar-button: img(src="/images/icons/edit.svg").toolbar-button-icon
	a.unstyled(href=`${article.url}/delete`).toolbar-button: img(src="/images/icons/trash.svg").toolbar-button-icon