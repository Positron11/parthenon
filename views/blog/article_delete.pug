extends ../base

append scripts
	script(type="text/javascript", src="/javascripts/blog/article_delete.js", defer)

append stylesheets
	link(rel="stylesheet", href="/stylesheets/forms.css")

block static_variables 
	- var header_heading = "Banish."
	- var header_subheading = `Deleting "${article.title}".`
	- var header_content = "Are you entirely sure you want to delete this article? The article itself, along with all its comments will be gone forever. Proceed if you're okay with this."
	- var toolbar_banner_content = "Delete."

block content
	.separator
	form(action="", method="post").space-between.minimal-spacing.flexbox
		input#form_title_field(type="text", autofocus, required, pattern!=article.title, oninvalid="setCustomValidity('Type article title to confirm')", onchange="setCustomValidity('')", placeholder="Type article title to confirm...")
		button#form_submit_button(type="submit").danger Delete