doctype html
html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		
		title!= title + " // Parthenon"
		meta(name="author" content="Aarush Kumbhakern")
		meta(name="description" content="Aarush Kumbhakern's personal homepage.")

		block stylesheets
			link(rel="stylesheet", href="/stylesheets/reset.css")
			link(rel="stylesheet", href="/stylesheets/main.css")
			link(rel="stylesheet", href="https://api.fontshare.com/v2/css?f[]=crimson-pro@2,1&display=swap")

		block scripts

	body
		#page
			header#navbar.space-between.vertically-center.flexbox
				a.unstyled(href="/"): #navbar_banner 
					span Aa
					span.hover-show-text rush Kumbhakern
					span .

				#nav_menu_button.clickable(src="/images/icons/menu.svg", onclick="document.getElementById('navbar').classList.toggle('menu-open')")
					.bar 
					.bar 
					.bar

			nav#nav_menu_wrapper.vertically-center.flexbox: #nav_menu.comfortable-spacing.vertically-center.column.flexbox
				a.unstyled.vertically-center.compact-spacing.flexbox.nav-link(href="/blog") 
					img(src="/images/icons/blog.svg")
					span Blog

				a.unstyled.vertically-center.compact-spacing.flexbox.nav-link(href="/about") 
					img(src="/images/icons/avatar.svg")
					span About

				a.unstyled.vertically-center.compact-spacing.flexbox.nav-link(href="/contact") 
					img(src="/images/icons/phone.svg")
					span Contact

			main#main
				#header
					block header
						h1.heading!= heading
						h2.subheading!= subheading
						p.content!= content

				block content

			#toolbar.space-between.vertically-center.flexbox
				block toolbar_banner
					#toolbar_banner= toolbar_banner_content

				#toolbar_buttons.minimal-spacing.vertically-center.flexbox
					img.clickable.toolbar-button-icon(src="/images/icons/top.svg", onclick="window.scrollTo(0,0);")
					a.unstyled(href="/blog/create"): img.toolbar-button-icon(src="/images/icons/write.svg")
					block toolbar_buttons
