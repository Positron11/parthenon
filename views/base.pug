doctype html
html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		
		title!= title + " // Parthenon"
		meta(name="author" content="Aarush Kumbhakern")
		meta(name="description" content="Aarush Kumbhakern's personal homepage.")

		block stylesheets
			link(rel="stylesheet", href="/stylesheets/reset.css")
			link(rel="stylesheet", href="/stylesheets/main.css")
			link(rel="stylesheet", href="https://api.fontshare.com/v2/css?f[]=crimson-pro@2,1&display=swap")

		block scripts

	body
		#page
			header#navbar
				a.unstyled(href="/"): #navbar_banner 
					span Aa
					span.hover-show-text rush Kumbhakern
					span .

				#navbar_buttons.minimal-spacing.vertically-center.flexbox
					img.clickable.navbar-button-icon(src="/images/icons/top.svg", onclick="window.scrollTo(0,0);")
					a.unstyled(href="/blog/create"): img.navbar-button-icon(src="/images/icons/write.svg")
					block navbar_buttons

					#navbar_menu_button.clickable.navbar-button-icon(src="/images/icons/menu.svg", onclick="document.getElementById('navbar').classList.toggle('menu-open')")
						.bar 
						.bar 
						.bar

				nav#nav_links_wrapper: #nav_links.comfortable-spacing.vertically-center.column.flexbox
					a.unstyled(href="/blog") Blog
					a.unstyled(href="/about") About
					a.unstyled(href="/contact") Contact

			main#main
				#header
					block header
						h1.heading!= heading
						h2.subheading!= subheading
						p.content!= content

				block content

			footer#footer
				#footer_banner Fin.

				#footer_links
					.clickable(onclick="window.scrollTo(0,0);") Go to Top
					a.unstyled(href="https://github.com/Positron11/parthenon", target="_blank") Site Repo